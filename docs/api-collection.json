                },
                {
                  "key": "email",
                  "value": "jane@example.com",
                  "type": "text"
                },
                {
                  "key": "bio",
                  "value": "Full-stack developer passionate about .NET",
                  "type": "text"
                },
                {
                  "key": "phoneNumber",
                  "value": "+9876543210",
                  "type": "text"
                },
                {
                  "key": "avatarUrl",
                  "value": "",
                  "type": "file",
                  "description": "JPG, JPEG, or PNG. Max 5MB."
                }
              ]
            }
          },
          "response": [
            {
              "name": "200 — Success",
              "status": "OK",
              "code": 200,
              "body": "{\n  \"success\": true,\n  \"statusCode\": 200,\n  \"message\": \"Success\",\n  \"data\": {\n    \"id\": \"3fa85f64-5717-4562-b3fc-2c963f66afa6\",\n    \"fullName\": \"Jane Doe\",\n    \"email\": \"jane@example.com\",\n    \"bio\": \"Full-stack developer passionate about .NET\",\n    \"phoneNumber\": \"+9876543210\",\n    \"avatarUrl\": \"https://storage.blob.core.windows.net/avatars/new.jpg\"\n  },\n  \"timestamp\": \"2026-02-13T17:00:00Z\"\n}"
            }
          ]
        },
        {
          "name": "Upload File",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/me/files?directory=uploads",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "me", "files"],
              "query": [
                {
                  "key": "directory",
                  "value": "uploads",
                  "description": "Target directory (default: uploads)"
                }
              ]
            },
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "value": "",
                  "type": "file",
                  "description": "File to upload"
                }
              ]
            }
          },
          "response": [
            {
              "name": "200 — Success",
              "status": "OK",
              "code": 200,
              "body": "{\n  \"success\": true,\n  \"statusCode\": 200,\n  \"message\": \"Success\",\n  \"data\": \"https://storage.blob.core.windows.net/uploads/abc123.pdf\",\n  \"timestamp\": \"2026-02-13T17:00:00Z\"\n}"
            }
          ]
        },
        {
          "name": "Delete File",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/me/files?fileUrl=https://storage.blob.core.windows.net/uploads/abc123.pdf",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "me", "files"],
              "query": [
                {
                  "key": "fileUrl",
                  "value": "https://storage.blob.core.windows.net/uploads/abc123.pdf",
                  "description": "Full URL of the file to delete"
                }
              ]
            }
          },
          "response": [
            {
              "name": "200 — Success",
              "status": "OK",
              "code": 200,
              "body": "{\n  \"success\": true,\n  \"statusCode\": 200,\n  \"message\": \"Success\",\n  \"data\": null,\n  \"timestamp\": \"2026-02-13T17:00:00Z\"\n}"
            }
          ]
        }
      ]
    },
    {
      "name": "Health",
      "description": "Infrastructure endpoints (no auth required)",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          },
          "response": [
            {
              "name": "200 — Healthy",
              "status": "OK",
              "code": 200,
              "body": "Healthy"
            },
            {
              "name": "503 — Unhealthy",
              "status": "Service Unavailable",
              "code": 503,
              "body": "Unhealthy"
            }
          ]
        }
      ]
    }
  ]
}